<div class="container">
		<div class="row">
			<div class="col-md-4">
				<h2>Burgers</h2>
				<ul>
					{{#each burgers}}
						{{#unless this.devoured}}
							<li><p>{{this.burger_name}}</p><br>
								<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
									<button type="submit">Devour</button>
								</form>
							</li>
						{{/unless}}
					{{/each}}
				<ul>
			</div>
			<div class="col-md-4">
				<h2>Add a Burger</h2>
				<form class="createBurger" action="burgers/create" method="POST">
				<label for="burgerInput">Burger Name</label>
				<input placeholder="Add a burger" type="text" name="name">
				<button type="submit" class="btn btn-default">Add Burger</button>
			</div>
			<div class="col-md-4">
				<h2>Devoured</h2>
				<ul>
					{{#each burgers}}
						{{#if this.devoured}}
							<li>{{this.burger_name}}</li>
						{{/if}}
					{{/each}}
				</ul>
			</div>
		</div>
	</div>